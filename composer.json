{
  "name": "zxf/modules",
  "description": "一个适用于Laravel 11+版本的现代化、多模块化扩展",
  "license": "MIT",
  "keywords": ["laravel", "module", "modular", "package", "modules", "zxf"],
    "require": {
      "php": ">=8.2",
      "laravel/framework": ">=11.0"
    },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "orchestra/testbench": "^9.0"
  },
    "autoload": {
        "psr-4": {
            "zxf\\Modules\\": "src/"
        },
        "files": [
            "src/helper.php"
        ]
    },
  "autoload-dev": {
    "psr-4": {
      "zxf\\Modules\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "zxf\\Modules\\ModulesServiceProvider"
      ],
      "aliases": {
        "Module": "zxf\\Modules\\Facades\\Module"
      }
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}